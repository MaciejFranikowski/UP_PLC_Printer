            <ComboBoxItem Content="18" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="24" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="48" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Label Content="Font:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="173,156,0,0"/>
        <Label Content="Size:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="371,156,0,0"/>
    </Grid>
</Window>
